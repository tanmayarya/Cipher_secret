
<div class="comment">
  <div class="userDetail">

    <div class="messages">
      <%if comment.id%2==0%>
      <div class="message">
        <div class="triangle"></div>
        <img
          src="data:image/png;base64,"
          class="avatar">
        <p>
          <strong>
            <%= comment.user.email %>,<em>
              posted
              <%= time_ago_in_words(comment.created_at) %></em>
          </strong>
          <%= comment.content %></p>
        <p>
          <%if can? :update,comment%>
          <%= link_to 'Edit', edit_comment_path(comment) ,params[id: comment.id]%>
          <% end %>.
          <%if can? :destroy,comment%>
          <%= link_to "Delete", comment, method: :delete, data: {confirm: "Are you sure?"}%>
          <% end %>
        </p>
      </div>
      <%else%>
      <div class="message inverse">
        <div class="triangle"></div>
        <img
          src="data:image/png;base64,"
          class="avatar">
          <p>
            <strong>
              <%= comment.user.email %>,<em>
                posted
                <%= time_ago_in_words(comment.created_at) %></em>
            </strong>
            <%= comment.content %></p>
          <p>
            <%if can? :update,comment%>
            <%= link_to 'Edit', edit_comment_path(comment) ,params[id: comment.id]%>
            <% end %>.
            <%if can? :destroy,comment%>
            <%= link_to "Delete", comment, method: :delete, data: {confirm: "Are you sure?"}%>
            <% end %>
          </p>
      </div>
    </div>
    <%end%>
  </div>
</div>
